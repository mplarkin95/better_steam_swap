<div class="container">
  <div class="jumbotron">
    <h1><center> Sign up! </center></h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="input-group">
            <%= f.label "Change Username", style: "margin-top: 10px;" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
          </div>

          <div class="input-group">
            <%= f.label "Change Steam URL", style: "margin-top: 10px;" %>
            <%= f.text_field :steam_id, class: "form-control", placeholder: "Optional", :size=>60 %>
          </div>

          <div class="input-group">
            <%= f.label "Change Email", style: "margin-top: 10px;" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>
          <div id="Password" class="collapse">
            <div class="input-group">
              <%= f.label "Change Password", style: "margin-top: 10px;" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>

            <div class="input-group">
              <%= f.label :password_confirmation, "Confirmation", style: "margin-top: 10px;" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
          <p><a class="btn" data-toggle="collapse" id="hide" data-target='#Password' onclick="Alt('hide','Change Password','Hide')">Change Password</a></p> 

          <%= f.submit "Submit Changes", class: "btn btn-primary", style: "margin-top: 10px;" %>
        <% end %>
      </div> <!-- col -->
    </div> <!-- row -->
  </div> <!-- jumbotron -->
</div> <!-- container -->
