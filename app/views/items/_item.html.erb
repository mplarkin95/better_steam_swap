<div class="col-md-4" style="padding-top: 10px;">
  <div class="thumbnail item-thumbnail">
    <a href= "<%= root_path %>items/<%= item.id%>">
      <img src= <%= item.img_url %> >
    </a>
    <div class="caption">
      <h3> <%= item.name %> </h3> 
      <h6>
        <% if item.steam_url %> 
          <%= link_to "Store Page", item.steam_url %> <%= link_to "Item Page", item %>
        <% else %>
          <%= link_to "Item Page", item %>
        <% end %>
      </h6>
      <% unless item.description.include?("<") %>
        <p> <%= truncate(item.description, length: 120) {link_to "Continue", item} %> </p>
      <% end %>
    </div> 
  </div> 
</div>